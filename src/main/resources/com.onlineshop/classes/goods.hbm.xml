<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.onlineshop.classes.goods" table="goods">
        <id name="id" type="int">
            <column name="GOODS_ID" precision="5" scale="0" />
            <generator class="assigned" />
        </id>
        <property name="description" type="String">
            <column name="DESCRIPTION" length="50" not-null="true" />
        </property>
        <property name="title" type="string">
            <column name="USERNAME" length="20" not-null="true" />
        </property>
        <property name="cover_url" type="string">
            <column name="COVER_URL" length="50" not-null="true" />
        </property>

    </class>
</hibernate-mapping>